
namespace blocks.fbs;

// Not used anymore but kept for reference and later use in the protocol, maybe ?

enum Type:byte { Player = 0, Chunk = 1 }

struct Header {
  id:long;
  type:Type;
  body_size:long;
}

struct Pos {
  x:long;
  y:long;
  z:long;
}

struct Block {
  id: ushort;
  variant: ushort;
  air: bool;
  transparent: bool;
}

table Chunk {
  header:Header;
  version: ubyte = 0;
  size: ubyte;
  cid: Pos (required);
  blocks: [Block];
}

root_type Chunk;
